<h1>Games index</h1>
<% @games.each do |game| %>
  <h3><%= game.name %> <small><%= game.year %> <%= link_to "[edit]", edit_game_path(game) %></small></h3>

  <% if !game.fields.empty? %>
    <label>Fields:</label>
    <ul>
      <% game.fields.each do |field| %>
        <li>
          <%= field.name %> (<%= field.field_type %>)
          <% if field.field_type == 'range' %>
            [<%= field.range_min %> - <%= field.range_max %>]
          <% end %>
          <% if !field.options.empty? %>
            <br>
            <label>options: </label>
            <%= field.options.join(", ") %>
          <% end %>
        </li>
      <% end %>
    </ul>
  <% end %>

  <% if game.created_at != @games.last.created_at %>
    <hr>
  <% end %>
<% end %>
