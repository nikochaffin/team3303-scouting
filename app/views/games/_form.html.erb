<%= form_for(@game) do |f| %>

  <div class="form-field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div class="form-group">
    <%= f.label :year %>
    <%= f.number_field :year %>
  </div>

  <div class="form-field">
    <% if !@game.fields.empty? %>
      <hr>
      <label>Fields</label>

      <%= f.fields_for :fields do |builder| %>
        <%= render 'field_fields', f: builder %>
      <% end %>
    <% end %>
    <%= link_to_add_fields "Add Scoring Field", f, :fields %>
  </div>

  <%= f.submit %>
<% end %>
