<h1><%= @game.name %> <small><%= @game.year %> <%= link_to "[edit]", edit_game_path(@game) %></small></h1>

<% if !@game.fields.empty? %>
  <label>Fields:</label>
  <ul>
    <% @game.fields.each do |field| %>
      <li>
        <%= field.name %> (<%= field.field_type %>)
        <% if field.field_type == 'range' %>
          [<%= field.range_min %> - <%= field.range_max %>]
        <% end %>

        <% if !field.options.empty? %>
          <br>
          <label>options: </label>
          <%= field.options.join(", ") %>
        <% end %>
      </li>
    <% end %>
  </ul>
<% end %>



<% if !@game.entries.empty? %>
  <table>
    <thead>
      <tr>
        <% @game.fields.each do |field| %>
          <th><%= field.name.humanize %></th>
        <% end %>
      </tr>
    </thead>
    <% @game.entries.each do |entry| %>
      <tr>
        <% entry.properties.each do |prop, val| %>
          <td><%= val %></td>
        <% end %>
      </tr>
    <% end %>
  </table>
<% end %>
